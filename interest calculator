import tkinter as tk
from tkinter import messagebox

def calculate_interest():
    try:
        # Get values from entry fields
        principal = float(entry_principal.get())
        time = float(entry_time.get())
        rate = float(entry_rate.get())

        # Simple Interest formula: SI = (P * T * R) / 100
        simple_interest = (principal * time * rate) / 100

        # Compound Interest formula: CI = P * ( (1 + R/100)^T - 1 )
        compound_interest = principal * ((1 + rate / 100) ** time - 1)

        # Display results
        messagebox.showinfo("Result",
                            f"Simple Interest: {simple_interest:.2f}\n"
                            f"Compound Interest: {compound_interest:.2f}")
    except ValueError:
        messagebox.showerror("Error", "Please enter valid numeric values.")

# Create main window
root = tk.Tk()
root.title("Interest Calculator")
root.geometry("400x300")

# Labels and Entry fields
label_principal = tk.Label(root, text="Principal Amount:")
label_principal.pack(pady=5)
entry_principal = tk.Entry(root)
entry_principal.pack(pady=5)

label_time = tk.Label(root, text="Time Period (years):")
label_time.pack(pady=5)
entry_time = tk.Entry(root)
entry_time.pack(pady=5)

label_rate = tk.Label(root, text="Rate of Interest (%):")
label_rate.pack(pady=5)
entry_rate = tk.Entry(root)
entry_rate.pack(pady=5)

# Button to calculate
btn_calculate = tk.Button(root, text="Calculate Interest", command=calculate_interest)
btn_calculate.pack(pady=20)

# Run the application
root.mainloop()
