import tkinter as tk
from tkinter import messagebox

def convert_length():
    try:
        # Get value from entry field
        inches = float(entry_inches.get())
        
        # Conversion: 1 inch = 2.54 cm
        centimeters = inches * 2.54
        
        # Display result
        messagebox.showinfo("Result", f"{inches:.2f} inches = {centimeters:.2f} cm")
    except ValueError:
        messagebox.showerror("Error", "Please enter a valid numeric value.")

# Create main window
root = tk.Tk()
root.title("Inches to Centimeters Converter")
root.geometry("350x200")

# Label and Entry field
label_inches = tk.Label(root, text="Enter length in inches:")
label_inches.pack(pady=10)

entry_inches = tk.Entry(root)
entry_inches.pack(pady=5)

# Button to convert
btn_convert = tk.Button(root, text="Convert", command=convert_length)
btn_convert.pack(pady=20)

# Run the application
root.mainloop()
